#!/bin/bash

#################################
# SET SHELL PROCESSING VARIABLES 
#################################
set -x
export PS4='+ $SECONDS + '
date

#########################################################
# obtain unique LSF id (jobid) and make temp directories 
#########################################################
export pid=$$
export DATA_IN=${DATA_IN:-${DATAROOT}}
export DATA=${DATA_IN}/${jobid:?}
mkdir -p $DATA
cd $DATA

##########################################
# Run setpdy and initialize PDY variables 
##########################################
export cycle=${cycle:-t00z}
setpdy.sh 20
. ./PDY
export INITDATE=${PDYm1}
export NEXTDATE=${PDY}

######################################
# Determine Job Output Name on System 
######################################
export pgmout="OUTPUT.${pid}"

####################################
# Set EVS directories               
####################################
export HOMEevs=${HOMEevs:-${PACKAGEROOT}/evs.${model_ver}}
export EXECevs=${EXECevs:-$HOMEevs/exec}
export FIXevs=${FIXevs:-$HOMEevs/fix}
export PARMevs=${PARMevs:-$HOMEevs/parm}
export USHevs=${USHevs:-$HOMEevs/ush}

####################################
# Define NET/RUN variables          
####################################
export NET=${NET:-evs}
export MODEL=${MODEL:-evs}
export STEP=${STEP:-prep}
export COMPONENT=${COMPONENT:-global_det}
export MODELNAME=${MODELNAME:-gfs}
export MODNAM=echo $MODELNAME | tr '[a-z]' '[A-Z]'
export OBTYPE=${OBTYPE:-NDBC}
export RUN=${RUN:-wave}
export VERIF_CASE=${VERIF_CASE:-grid2obs}

####################################
# Define COMIN/COMOUT variables     
####################################
export COMIN=${COMIN:-$(compath.py ${envir}/com/${NET}/${evs_ver})}
export COMINmodel=${COMINmodel:-$(compath.py ${envir}/com/${MODELNAME}/${model_ver})} 
export COMINndbc=${COMINobs:-$(compath.py ${envir}/dcom)}

export COMOUT=${COMIN}/${STEP}/${COMPONENT}/${RUN}
export ARCgfs=${COMOUT}.${INITDATE}/${MODELNAME}/${VERIF_CASE}

# make the directory where the ARCgfs and gdasnc will be kept
mkdir -p ${COMOUT}.${INITDATE}/${MODELNAME}/${VERIF_CASE}

export jlogfile=${DATA}/${MODELNAME}_${RUN}_ASCII2NC.log

####################################
# Execute the script                
####################################
env
$HOMEevs/scripts/global_det/prep/exevs_global_det_wave_grid2obs_prep_a2n.sh 1>>$pgmout 2>errfile.${pid}
export err=$?; err_chk

cat $pgmout

msg="JOB $job HAS COMPLETED NORMALLY."
postmsg "$jlogfile" "$msg"

if [ "$KEEPDATA" != "YES" ] ; then
  rm -rf $DATA
fi

date
